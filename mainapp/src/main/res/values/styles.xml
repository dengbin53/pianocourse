<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/color_tra</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/color_bg_gray</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/color_green</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/color_bg_default</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowBackground">@mipmap/img_splash</item> -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- dialog alpha动画 -->
    <style name="dialogAnimationAlpha" parent="MvpBaseDialogTheme">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_alpha</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_alpha</item>
    </style>

    <!-- dialog移动动画 -->
    <style name="dialogAnimationTranslate" parent="MvpBaseDialogTheme">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_translate</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_translate</item>
    </style>

    <!-- dialog缩放动画 -->
    <style name="dialogAnimationScale" parent="MvpBaseDialogTheme">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_scale</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_scale</item>
    </style>

    <!-- 移动dialog样式 -->
    <style name="dialog_translate" parent="MvpBaseDialogTheme">
        <!-- 显示动画 -->
        <item name="android:windowAnimationStyle">@style/dialogAnimationTranslate</item>
    </style>

    <!-- 缩放dialog样式 -->
    <style name="dialog_sacle" parent="MvpBaseDialogTheme">
        <item name="android:windowAnimationStyle">@style/dialogAnimationScale</item>
    </style>

    <!-- 淡入淡出 -->
    <style name="dialog_alpha" parent="MvpBaseDialogTheme">
        <item name="android:windowAnimationStyle">@style/dialogAnimationAlpha</item>
    </style>

    <!--提交按钮-->
    <style name="button_large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_small</item>
        <item name="android:background">@drawable/selector_circle_yellow_gray</item>
        <item name="android:textColor">@color/color_text_black_gray</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_marginTop">@dimen/space_normal</item>
        <item name="android:layout_marginBottom">@dimen/space_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:enabled">true</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="tab_layout_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <!--通用 tabLayout 属性-->
    <style name="tab_layout" parent="tab_layout_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="android:background">@drawable/shape_white_border_bottom</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">@color/color_red</item>
        <item name="tabPaddingStart">@dimen/space_normal</item>
        <item name="tabPaddingEnd">@dimen/space_normal</item>
        <item name="tabSelectedTextColor">@color/color_red</item>
        <item name="tabMinWidth">48dp</item>
        <item name="tabUnboundedRipple">false</item>
        <item name="tabRippleColor">@color/color_bg_gray_light</item>
        <item name="tabGravity">fill</item>
        <item name="tabTextColor">@color/color_text_black</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/tab_layout_text</item>
    </style>

    <style name="style_divider_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="style_divider_v">
        <item name="android:layout_width">@dimen/divider</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="style_space_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_normal</item>
        <item name="android:background">@color/color_bg_default</item>
    </style>

</resources>
