<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="common_attrs">
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="string" />
        <attr name="name_text" format="string" />
        <attr name="value_text" format="string" />
        <attr name="hint_text" format="string" />
        <attr name="value_color" format="color|integer" />
        <attr name="key_color" format="color|integer" />
        <attr name="more_text" format="string" />
        <attr name="title_text" format="string" />
        <attr name="title_color" format="color|integer" />
        <attr name="imeOptions">
            <enum name="next" value="0" />
            <enum name="done" value="1" />
        </attr>
        <attr name="image" format="reference" />
        <attr name="showLine" format="boolean" />
        <attr name="orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="arrow" format="boolean" />
        <attr name="name" format="string" />
        <attr name="value" format="string" />
        <attr name="hint" format="string" />
        <attr name="valueColor" format="color|integer" />
        <attr name="keyColor" format="color|integer" />
        <attr name="inputType">
            <enum name="text" value="0" />
            <enum name="number" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleIndicator">
        <attr name="ci_radius" format="dimension" />
        <attr name="ci_margin" format="dimension" />
        <attr name="ci_background" format="color|integer" />
        <attr name="ci_selected_background" format="color|integer" />
        <attr name="ci_gravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="ci_mode">
            <enum name="inside" value="0" />
            <enum name="outside" value="1" />
            <enum name="solo" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TagView">
        <attr name="tag_layout" format="reference"></attr>
        <attr name="tag_txt_id" format="reference"></attr>
    </declare-styleable>

    <!-- MJRatingbar -->
    <declare-styleable name="MRatingBar">
        <!-- 尺寸值 -->
        <attr name="starImageSize" format="dimension" />
        <attr name="starCount" format="integer" />
        <attr name="duration" format="integer" />
        <attr name="starPadding" format="dimension" />
        <!-- 资源文件值 -->
        <attr name="starEmpty" format="reference" />
        <!-- 资源文件值 -->
        <attr name="starFill" format="reference" />
        <!-- boolean值 -->
        <attr name="clickable" format="boolean" />
    </declare-styleable>

</resources>
