<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_white"
    android:orientation="vertical"
    android:paddingStart="@dimen/space_large"
    android:paddingEnd="@dimen/space_large">

    <ImageView
        android:id="@+id/obtain_coupon_cancel_iv"
        android:layout_width="@dimen/item_height"
        android:layout_height="@dimen/item_height"
        android:layout_gravity="right"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_cancel_black" />

    <TextView
        android:id="@+id/obtain_coupon_name_tv"
        style="@style/text_normal_black"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/obtain_coupon_code_tv"
        style="@style/text_small_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_small"
        android:gravity="center"
        android:text="选择充值金额" />

    <TextView
        android:id="@+id/obtain_coupon_get_tv"
        style="@style/text_normal_black"
        android:layout_width="200dp"
        android:layout_height="@dimen/item_height_small"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_large"
        android:layout_marginBottom="@dimen/space_large"
        android:background="@drawable/shape_circle_green"
        android:gravity="center"
        android:text="领取" />

</LinearLayout>
