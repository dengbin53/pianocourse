<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:autoTurningTime="3000"
        app:canLoop="true" />

    <TextView
        style="@style/text_normal_black"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/space_normal"
        android:layout_marginTop="@dimen/space_large"
        android:background="@drawable/shape_white_border_left_red_2dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/space_normal"
        android:text="热门集合" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/header_qifang_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingTop="@dimen/space_normal"
        android:paddingBottom="@dimen/space_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_default"
        android:orientation="vertical">

        <TextView
            style="@style/text_normal_black"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/space_normal"
            android:layout_marginTop="@dimen/space_large"
            android:background="@drawable/shape_gray_default_border_left_red_2dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/space_normal"
            android:text="热门单曲" />

    </LinearLayout>

</LinearLayout>
