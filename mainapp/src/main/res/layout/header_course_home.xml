<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:autoTurningTime="3000"
        app:canLoop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.zconly.pianocourse.widget.centerdrawable.CenterDrawableTextView
            android:id="@+id/header_course_tv0"
            style="@style/text_small_black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_dashike"
            android:drawablePadding="@dimen/space_half"
            android:gravity="center"
            android:text="大师课" />

        <com.zconly.pianocourse.widget.centerdrawable.CenterDrawableTextView
            android:id="@+id/header_course_tv1"
            style="@style/text_small_black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_zhiboke"
            android:drawablePadding="@dimen/space_half"
            android:gravity="center"
            android:text="直播课" />

        <com.zconly.pianocourse.widget.centerdrawable.CenterDrawableTextView
            android:id="@+id/header_course_tv2"
            style="@style/text_small_black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_lianqinla"
            android:drawablePadding="@dimen/space_half"
            android:gravity="center"
            android:text="练琴啦" />

    </LinearLayout>

</LinearLayout>
