<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginTop="@dimen/space_normal"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/account_amount_tv"
            style="@style/text_larger_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/space_large"
            android:gravity="center"
            android:text="￥"
            android:textStyle="bold" />

        <TextView
            style="@style/text_small_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_large"
            android:layout_toStartOf="@id/account_amount_tv"
            android:gravity="center"
            android:text="余额" />

        <TextView
            android:id="@+id/account_update_tv"
            style="@style/text_small_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_large"
            android:layout_toEndOf="@id/account_amount_tv"
            android:gravity="center"
            android:text="更新" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/account_recharge_tv"
            style="@style/text_larger_white"
            android:layout_width="128dp"
            android:layout_height="@dimen/item_height_small"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_large"
            android:layout_marginBottom="@dimen/space_large"
            android:background="@drawable/shape_corner_green"
            android:gravity="center"
            android:text="充值" />

    </LinearLayout>

    <com.zconly.pianocourse.widget.MKeyValueView
        android:id="@+id/account_coupon_kvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_normal"
        android:background="@drawable/selector_white_gray_border_bottom"
        android:minHeight="@dimen/item_height"
        nv:arrow="true"
        nv:name="优惠券" />

    <com.zconly.pianocourse.widget.MKeyValueView
        android:id="@+id/account_trading_record_kvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white_gray_border_bottom"
        android:minHeight="@dimen/item_height"
        nv:arrow="true"
        nv:name="交易记录" />

</LinearLayout>
