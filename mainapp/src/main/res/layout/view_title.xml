<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/firewall_call_linear_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_border_bottom"
    android:minHeight="@dimen/title_height">

    <ImageView
        android:id="@+id/title_left_iv"
        android:layout_width="@dimen/title_height"
        android:layout_height="@dimen/title_height"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_arrow_left_black" />

    <TextView
        android:id="@+id/title_left_tv"
        style="@style/text_normal_black"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_toEndOf="@id/title_left_iv"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/space_normal" />

    <ImageView
        android:id="@+id/title_right_iv_0"
        android:layout_width="@dimen/title_height"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentEnd="true"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_cancel_black"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/title_right_iv_1"
        android:layout_width="@dimen/title_height"
        android:layout_height="@dimen/title_height"
        android:layout_toStartOf="@+id/title_right_iv_0"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_like_black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_right_tv"
        style="@style/text_normal_black"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/title_center_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/text_large" />

    <LinearLayout
        android:id="@+id/title_center_ll"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" />

    <View
        android:id="@+id/title_message_point_view"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignStart="@id/title_right_iv_0"
        android:layout_alignTop="@id/title_right_iv_0"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_circle_red"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignStart="@+id/title_right_iv_0"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_circle_red"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="16dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_count"
        android:visibility="gone" />

</merge>
