<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/firewall_call_linear_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/title_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/title_left_iv"
        android:layout_width="@dimen/item_height_small"
        android:layout_height="@dimen/title_height"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_arrow_left_black" />

    <TextView
        android:id="@+id/title_left_tv"
        style="@style/text_normal_black"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_marginStart="@dimen/space_normal"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/title_center_tv"
        style="@style/text_large_black"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_height"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true" />

    <LinearLayout
        android:id="@+id/title_center_ll"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_height"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_right_tv"
        style="@style/text_normal_black"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_marginEnd="@dimen/space_normal"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/title_right_iv_1"
        android:layout_width="@dimen/item_height_small"
        android:layout_height="@dimen/title_height"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_like_black"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/title_right_rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:visibility="gone">

        <ImageView
            android:id="@+id/title_right_iv_0"
            android:layout_width="@dimen/item_height_small"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_like_black" />

        <View
            android:id="@+id/title_message_point_view"
            android:layout_width="@dimen/space_normal"
            android:layout_height="@dimen/space_normal"
            android:layout_alignStart="@id/title_right_iv_0"
            android:layout_alignTop="@id/title_right_iv_0"
            android:layout_marginStart="24dp"
            android:layout_marginTop="@dimen/space_normal"
            android:background="@drawable/shape_circle_red"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_large"
            android:layout_alignStart="@+id/title_right_iv_0"
            android:layout_marginStart="@dimen/space_large"
            android:layout_marginTop="@dimen/space_normal"
            android:background="@drawable/shape_circle_red"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="@dimen/space_large"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_count"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
