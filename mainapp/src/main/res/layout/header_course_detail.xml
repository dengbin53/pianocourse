<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/header_course_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:foreground="@color/color_bg_black_10"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/header_course_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="@dimen/space_normal"
        android:layout_marginTop="@dimen/space_normal"
        android:background="@drawable/shape_corner_tra_border_white"
        android:padding="@dimen/divider"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/header_course_title_tv"
        style="@style/text_normal_white"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignTop="@id/header_course_iv"
        android:layout_toEndOf="@id/header_course_iv"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/space_normal"
        android:paddingEnd="@dimen/space_normal" />

    <TextView
        android:id="@+id/header_course_desc_tv"
        style="@style/text_small_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_course_title_tv"
        android:layout_toEndOf="@id/header_course_iv"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:paddingStart="@dimen/space_normal"
        android:paddingEnd="@dimen/space_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignBottom="@id/header_course_iv"
        android:layout_toEndOf="@id/header_course_iv"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/space_normal"
        android:paddingTop="@dimen/space_normal"
        android:paddingEnd="@dimen/space_normal">

        <TextView
            android:id="@+id/header_course_like_tv"
            style="@style/text_smaller_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/selector_like"
            android:drawablePadding="@dimen/drawable_padding"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/header_course_favorite_tv"
            style="@style/text_smaller_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_normal"
            android:drawableStart="@drawable/selector_favorite"
            android:drawablePadding="@dimen/drawable_padding"
            android:gravity="center_vertical" />

    </LinearLayout>

</RelativeLayout>
