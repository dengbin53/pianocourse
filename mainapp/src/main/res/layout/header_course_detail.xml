<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_course_iv"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/header_course_title_tv"
        style="@style/text_normal_black"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/color_white"
        android:gravity="bottom"
        android:paddingStart="@dimen/space_normal"
        android:paddingEnd="@dimen/space_normal" />

    <TextView
        android:id="@+id/header_course_teacher_tv"
        style="@style/text_small_black"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/space_normal"
        android:paddingEnd="@dimen/space_normal" />

    <TextView
        android:id="@+id/header_course_desc_tv"
        style="@style/text_small_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:paddingStart="@dimen/space_normal"
        android:paddingEnd="@dimen/space_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/space_normal"
        android:paddingTop="@dimen/space_normal"
        android:paddingEnd="@dimen/space_normal">

        <TextView
            android:id="@+id/header_course_like_tv"
            style="@style/text_small_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/ic_like"
            android:drawablePadding="@dimen/drawable_padding"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/header_course_favorite_tv"
            style="@style/text_small_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_normal"
            android:drawableStart="@mipmap/ic_favorite"
            android:drawablePadding="@dimen/drawable_padding"
            android:gravity="center_vertical" />

    </LinearLayout>

    <TextView
        style="@style/text_normal_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_small"
        android:gravity="bottom"
        android:paddingStart="@dimen/space_normal"
        android:text="目录" />

</LinearLayout>
