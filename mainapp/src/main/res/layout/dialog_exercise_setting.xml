<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_white"
    android:orientation="vertical"
    android:paddingStart="@dimen/space_large"
    android:paddingEnd="@dimen/space_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dialog_exercise_double_hand_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_exercise_double_hand_tv"
                style="@style/text_normal_black"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_height"
                android:drawableStart="@drawable/selector_left_hand"
                android:drawableEnd="@drawable/selector_right_hand"
                android:gravity="center" />

            <TextView
                android:id="@+id/dialog_exercise_double_hand_tv2"
                style="@style/text_normal_black"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_height"
                android:gravity="center"
                android:paddingStart="@dimen/drawable_padding"
                android:text="双手" />

        </LinearLayout>

        <com.zconly.pianocourse.widget.centerdrawable.CenterDrawableTextView
            android:id="@+id/dialog_exercise_left_hand_tv"
            style="@style/text_normal_black"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_height"
            android:layout_weight="1"
            android:drawableStart="@drawable/selector_left_hand"
            android:drawablePadding="@dimen/drawable_padding"
            android:gravity="center"
            android:padding="@dimen/space_normal"
            android:text="左手" />

        <com.zconly.pianocourse.widget.centerdrawable.CenterDrawableTextView
            android:id="@+id/dialog_exercise_right_hand_tv"
            style="@style/text_normal_black"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_height"
            android:layout_weight="1"
            android:drawableStart="@drawable/selector_right_hand"
            android:drawablePadding="@dimen/drawable_padding"
            android:gravity="center"
            android:padding="@dimen/space_normal"
            android:text="右手" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="速度" />

        <SeekBar
            android:id="@+id/dialog_exercise_sb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:max="304"
            android:thumbOffset="0dp" />

        <TextView
            android:id="@+id/dialog_exercise_speed_tv"
            style="@style/text_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical" />

    </LinearLayout>

    <View style="@style/style_divider_h" />

    <TextView
        android:id="@+id/dialog_exercise_btn"
        style="@style/text_normal_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:gravity="center"
        android:text="@string/confirm" />

</LinearLayout>
