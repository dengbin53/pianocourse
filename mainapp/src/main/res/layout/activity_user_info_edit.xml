<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/header_user_info_edit"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="@dimen/space_normal" />

        <include layout="@layout/view_line_h" />

        <com.zconly.pianocourse.widget.MKeyValueEditView
            android:id="@+id/nick_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/selector_white_gray_light"
            nv:arrow="false"
            nv:imeOptions="done"
            nv:name="@string/key_nickname"
            nv:valueColor="@color/color_text_gray" />

        <include layout="@layout/view_line_h" />

        <com.zconly.pianocourse.widget.MKeyValueView
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/selector_white_gray_light"
            nv:arrow="false"
            nv:name="@string/key_sex"
            nv:valueColor="@color/color_text_gray" />

        <include layout="@layout/view_line_h" />

        <com.zconly.pianocourse.widget.MKeyValueView
            android:id="@+id/birth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/selector_white_gray_light"
            nv:arrow="false"
            nv:name="@string/key_birth"
            nv:valueColor="@color/color_text_gray" />

        <include layout="@layout/view_line_h" />

        <com.zconly.pianocourse.widget.MKeyValueView
            android:id="@+id/piano_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/selector_white_gray_light"
            nv:arrow="false"
            nv:name="@string/key_piano_time"
            nv:valueColor="@color/color_text_gray" />

        <include layout="@layout/view_line_h" />

        <com.zconly.pianocourse.widget.MKeyValueView
            android:id="@+id/piano_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_normal"
            android:background="@drawable/selector_white_gray_light"
            android:minHeight="@dimen/item_height"
            nv:arrow="true"
            nv:name="@string/key_piano_level"
            nv:valueColor="@color/color_text_gray" />

        <com.zconly.pianocourse.widget.MKeyValueEditView
            android:id="@+id/signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_white_gray_light"
            android:minHeight="@dimen/item_height"
            nv:arrow="false"
            nv:imeOptions="done"
            nv:name="@string/key_signature"
            nv:valueColor="@color/color_text_gray" />

    </LinearLayout>

</ScrollView>
