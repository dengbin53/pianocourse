<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/space_normal"
    android:layout_marginTop="@dimen/space_normal"
    android:layout_marginEnd="@dimen/space_normal"
    android:background="@drawable/shape_corner_white"
    android:paddingStart="@dimen/space_normal"
    android:paddingTop="@dimen/space_normal"
    android:paddingBottom="@dimen/space_normal">

    <ImageView
        android:id="@+id/item_list_sheet_iv"
        android:layout_width="@dimen/avatar_normal"
        android:layout_height="@dimen/avatar_normal"
        android:layout_marginEnd="@dimen/space_normal"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/item_list_sheet_title_tv"
        style="@style/text_small_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_list_sheet_iv"
        android:gravity="center_vertical"
        android:maxLines="1" />

    <TextView
        android:id="@+id/item_list_sheet_author_tv"
        style="@style/text_smaller_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_list_sheet_iv"
        android:layout_toEndOf="@id/item_list_sheet_iv"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/item_list_sheet_level_tv"
        style="@style/text_smaller_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_list_sheet_iv"
        android:layout_marginStart="@dimen/space_normal"
        android:layout_toEndOf="@id/item_list_sheet_author_tv"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/item_list_sheet_play_tv"
        style="@style/text_smaller_gray"
        android:layout_width="@dimen/item_height"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_list_sheet_iv"
        android:layout_alignParentEnd="true"
        android:drawableStart="@mipmap/ic_play_small"
        android:drawablePadding="@dimen/drawable_padding"
        android:maxLines="1" />

</RelativeLayout>
